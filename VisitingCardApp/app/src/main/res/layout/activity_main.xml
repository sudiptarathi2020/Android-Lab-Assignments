<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/solarized_light"
    android:gravity="center_horizontal">

    <!-- Photo -->
    <ImageView
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/me"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center_horizontal" />

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp" />

    <!-- Software Developer Title -->
    <TextView
        android:id="@+id/job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/role"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="4dp" />

    <!-- University Name -->
    <TextView
        android:id="@+id/university"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/University_Name"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="4dp" />

    <!-- Blood Group -->
    <TextView
        android:id="@+id/blood_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Blood_Group"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="4dp" />

    <!-- Phone, Email, Website (Left-Aligned) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <!-- Phone Number with Icon -->
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:minHeight="48dp"
            android:onClick="dialPhone"
            android:paddingTop="8dp"
            android:text="@string/phone"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_phone" />

        <!-- Email Address with Icon -->
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:minHeight="48dp"
            android:onClick="sendEmail"
            android:paddingTop="8dp"
            android:text="@string/mail"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_email" />

        <!-- Website Name with Icon -->
        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:minHeight="48dp"
            android:onClick="openWebsite"
            android:paddingTop="8dp"
            android:text="@string/website"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_website" />

        <TextView
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:minHeight="48dp"
            android:onClick="openWhatsApp"
            android:paddingTop="8dp"
            android:text="@string/whatsapp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_whatsapp" />
    </LinearLayout>
</LinearLayout>